---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

export const button = cva([
  "inline cursor-pointer rounded-md bg-transparent border-2 border-solid border-brand",
  "text-center overflow-hidden py-1.5 px-4",
  "font-medium hover:bg-brand hover:text-white transition-colors",
]);

export interface Props
  extends HTMLAttributes<"a">,
    VariantProps<typeof button> {}

const { class: className, ...restProps } = Astro.props;
---

<a
  class={button({
    class: className,
  })}
  {...restProps}
>
  <slot />
</a>

---
import Logo from "@assets/logo.svg";
import ButtonLink from "@components/button/button-link.astro";
import { config, menu } from "@config/index";
import { Image } from "astro:assets";
---

<nav
  class="mx-auto flex max-w-8xl items-center justify-between py-6 px-5vw"
  aria-label="Global"
>
  <div class="flex lg:flex-1">
    <a href="/" class="-m-1.5 p-1.5">
      <span class="sr-only" itemprop="name">
        {config.site.title}
      </span>
      <Image src={Logo} class="w-auto h-20" alt={config.site.title} />
    </a>
  </div>
  <div class="flex lg:hidden">
    <button
      type="button"
      class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <div
    class="hidden lg:flex lg:gap-x-12"
    itemscope
    itemtype="https://schema.org/SiteNavigationElement"
    role="menu"
  >
    {
      menu.map((m) => (
        <a
          href={m.path}
          class="text-base font-semibold leading-6 text-foreground underlined"
          role="menuitem"
        >
          {m.title}
        </a>
      ))
    }
  </div>
  <div class="hidden lg:flex lg:flex-1 lg:justify-end">
    <ButtonLink href="/kontakt">Kontakt</ButtonLink>
  </div>
</nav>

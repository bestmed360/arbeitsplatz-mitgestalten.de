---
import EinzelBeratungBild from "@assets/images/einzel_beratung.jpg";
import LebhaftesBueroBild from "@assets/images/lebhaftes_buero.jpg";
import UmfrageAmMacbookBild from "@assets/images/umfrage_am_macbook.jpg";
import ContactCta from "@components/blocks/contact-cta.astro";
import { Image } from "astro:assets";
import Layout from "../layouts/layout.astro";

const mitgestaltenSections = [
  {
    title: "Arbeitsorganisation",
    description:
      "Wir analysieren Arbeitsabläufe und -aufgaben und gestalten sie menschgerecht.",
  },
  {
    title: "Führungskultur",
    description:
      "Wir coachen Führungskräfte in wertschätzender und gesundheitsfördernder Mitarbeiterführung.",
  },
  {
    title: "Work-Life-Balance",
    description:
      "Wir beraten zu flexiblen Arbeitsmodellen für eine bessere Vereinbarkeit von Beruf und Privatleben.",
  },
  {
    title: "Kommunikation",
    description:
      "Wir moderieren einen konstruktiven Dialog zwischen Mitarbeitern, Führungskräften und Personalvertretung.",
  },
  {
    title: "Arbeitsumgebung",
    description:
      "Wir geben Empfehlungen für eine ergonomische und stimulierende Arbeitsumgebung.",
  },
  {
    title: "Qualifikation",
    description:
      "Wir zeigen Wege für sinnstiftende Aufgaben und persönliche Weiterentwicklung auf.",
  },
];
---

<Layout
  seo={{
    title:
      "Gefährdungsbeurteilung psychischer Belastung nach DIN EN ISO 10075-1",
    description:
      "Vertrauen Sie BESTMED 360 als Ihren Experten für die gesetzlich vorgeschriebene Gefährdungsbeurteilung psychischer Belastung am Arbeitsplatz gemäß DIN EN ISO 10075-1. Gestalten Sie einen gesunden Arbeitsplatz mit unserem Fachteam.",
  }}
>
  <main class="isolate">
    <!-- hero section -->
    <section class="relative isolate -z-10">
      <!-- svg effects -->
      <svg
        class="absolute inset-x-0 top-0 -z-10 h-[64rem] w-full stroke-gray-200 [mask-image:radial-gradient(32rem_32rem_at_center,white,transparent)]"
        aria-hidden="true"
      >
        <defs>
          <pattern
            id="1f932ae7-37de-4c0a-a8b0-a6e3b4d44b84"
            width="200"
            height="200"
            x="50%"
            y="-1"
            patternUnits="userSpaceOnUse"
          >
            <path d="M.5 200V.5H200" fill="none"></path>
          </pattern>
        </defs>
        <svg x="50%" y="-1" class="overflow-visible fill-gray-50">
          <path
